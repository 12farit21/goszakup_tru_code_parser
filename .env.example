# Target URL Configuration
# Base URL for goszakup.gov.kz tender search
BASE_URL=https://goszakup.gov.kz/ru/search/lots

# URL filters (URL-encoded parameters for search filters)
# Default: amount_from=5000000 and trade_type=g (government procurement)
URL_FILTERS=filter%5Bamount_from%5D=5000000&filter%5Btrade_type%5D=g

# Scraping Parameters
# Number of records to show per page (max: 2000)
RECORDS_PER_PAGE=2000

# Starting page number for scraping (default: 1)
START_PAGE=1

# Default maximum number of links to scrape (used when --max-links is not specified)
DEFAULT_MAX_LINKS=10000

# Browser Settings
# Run browser in headless mode (true/false)
HEADLESS_MODE=true

# Browser type to use (chromium, firefox, webkit)
BROWSER_TYPE=chromium

# Page timeout in milliseconds (60000 = 1 minute)
PAGE_TIMEOUT=60000

# Performance
# Save checkpoint every N pages
CHECKPOINT_INTERVAL=10

# Maximum number of retries for failed requests
MAX_RETRIES=3

# Delay between retries in seconds
RETRY_DELAY=5

# Delay between pages in seconds (to avoid rate limiting)
PAGE_DELAY=2.5

# Paths
# Directory to save output JSON files
OUTPUT_DIR=output

# Directory to save log files
LOG_DIR=logs

# Prefix for output filenames (will be appended with timestamp)
OUTPUT_FILENAME_PREFIX=goszakup_links

# Logging
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
